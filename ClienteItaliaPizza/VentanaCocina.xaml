<Window x:Class="ClienteItaliaPizza.VentanaCocina"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteItaliaPizza"
        mc:Ignorable="d"
        Title="VentanaCocina" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="RecursosGUI/fondoCocina.jpg"/>
        </Grid.Background>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="128" Margin="45,72,0,0" VerticalAlignment="Top" Width="715" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="#FFCCCCCC" Opacity="0.75"/>
            </Border.Background>

            <DataGrid x:Name="DataGridPlatillos" Margin="14,42,444,4" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="#FFCCCCCC" BorderBrush="#FF070808" Loaded="dataGridPlatillos_Loaded" Foreground="#FFB60D0D" OpacityMask="#FF5F0A72">

                <!--Encabezados de la tabla-->
                <DataGrid.Columns>
                    <DataGridTextColumn x:Name="ColumnPlatillo" Header="Platillo" Width="50" MinWidth="120" Foreground="#FF0B1FE6"/>
                    <DataGridCheckBoxColumn x:Name="ColumnCasillaCheckBox" Header="Marque Platillos listos" MinWidth="50"/>
                </DataGrid.Columns>

            </DataGrid>

        </Border>
        <Label Content="Pedidos en Espera" HorizontalAlignment="Center" Height="60" Margin="265,0,257,0" VerticalAlignment="Top" Width="270" Foreground="White" FontSize="30" FontFamily="Palatino Linotype"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="110" Margin="30,265,0,0" VerticalAlignment="Top" Width="715" CornerRadius="10">
            <Border.Background>
                <SolidColorBrush Color="#FFCCCCCC" Opacity="0.75"/>
            </Border.Background>
        </Border>
        <Label x:Name="labelIDPedido" Content="IDPedido" HorizontalAlignment="Left" Margin="360,75,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBD0000" FontSize="16"/>
        <Label x:Name="labelTipoPedido" Content="TipoPedido" HorizontalAlignment="Left" Margin="540,74,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBD0000" FontSize="16"/>
        <Label x:Name="labelNumMesa" Content="No.Mesa" HorizontalAlignment="Left" Margin="665,75,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="#FFBD0000" FontSize="16"/>
        <Button x:Name="ButtonPedidoDomicilioListo" Content="Listo" HorizontalAlignment="Left" Margin="610,135,0,0" VerticalAlignment="Top" Width="140" Background="#FFF39C27" FontWeight="Bold" Height="50" FontSize="18" Click="ButtonPedidoDomicilioListo_Click"/>


    </Grid>
</Window>
