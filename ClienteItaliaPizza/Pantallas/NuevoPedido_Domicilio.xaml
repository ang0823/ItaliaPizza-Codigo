<UserControl x:Class="ClienteItaliaPizza.Pantallas.NuevoPedido_Domicilio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteItaliaPizza.Pantallas"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid HorizontalAlignment="Left" Height="94" Margin="60,40,0,0" VerticalAlignment="Top" Width="581" Background="#FFF1F1F1" />

        <ComboBox x:Name="comboBoxClienteNombre" HorizontalAlignment="Left" Margin="143,53,0,0" IsEditable="True"  VerticalAlignment="Top" Width="195" BorderBrush="Blue"  Background="#FF8B8484" Height="27"  Loaded="ComboBoxClienteNombre_Loaded" SelectionChanged="ComboBoxClienteNombre_SelectionChanged" PreviewTextInput="ComboBoxClienteNombre_PreviewTextInput"/>
        <Label x:Name="labelDireccion" Content="Dirección" HorizontalAlignment="Left" Margin="81,94,0,0" VerticalAlignment="Top" Width="70" Height="31"/>
        <Label x:Name="labelTelefono" Content="Teléfono" HorizontalAlignment="Left" Margin="403,56,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelCliente" Content="Cliente" HorizontalAlignment="Left" Margin="79,54,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.404,-1.038" Width="55" Height="31"/>
        <TextBox x:Name="textBoxTelefono" HorizontalAlignment="Left" Height="25" Margin="460,56,0,0" TextWrapping="Wrap" Text="" MaxLength="30" VerticalAlignment="Top" Width="160" TextChanged="TextBoxTelefono_TextChanged" PreviewTextInput="TextBoxTelefono_PreviewTextInput"/>
        <ComboBox x:Name="comboBoxDireccion" HorizontalAlignment="Left" Margin="145,95,0,0" VerticalAlignment="Top" Width="335" Height="27" IsEditable="True" Loaded="ComboBoxDireccion_Loaded" SelectionChanged="ComboBoxDireccion_SelectionChanged" PreviewTextInput="ComboBoxDireccion_PreviewTextInput" />
        <Button x:Name="ButtonAgregarCliente" HorizontalAlignment="Left" Height="29" Margin="343,53,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="0.222,0.556" Background="Transparent" Click="ButtonAgregarCliente_Click" BorderBrush="#FFBBB9B9">
            <Image Height="22" Width="29" Source="/ClienteItaliaPizza;component/RecursosGUI/Plus_Icon.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5"/>
        </Button>

    </Grid>
</UserControl>
