<Window x:Class="ClienteItaliaPizza.Inventario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteItaliaPizza"
        mc:Ignorable="d"
        Title="Inventario" Height="650" Width="1000">
    <Window.Background>
        <ImageBrush ImageSource="RecursosGUI/fondoPrincipal.jpg"/>
    </Window.Background>
    <Grid x:Name="gridPrincipalInventario">
        
        <DataGrid x:Name="dataGridInventario" HorizontalAlignment="Left"  Height="422" Margin="42,65,0,0" VerticalAlignment="Top" Width="907" BorderBrush="#FF080808" FontSize="16" Background="#FF939292" CanUserDeleteRows="True" >
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="ColumnCodigo" Header="Código/Clave" Width="130" IsReadOnly="True" />
                <DataGridTextColumn x:Name="ColumnDescripcionIngrediente" Header="Descripcion del Ingrediente" Width="260" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="ColumnUnidadMedida" Header="Unidad de Medida" Width="150" IsReadOnly="True"/>
                <DataGridTextColumn x:Name="ColumnUbicacion" Header="Ubicacion" Width="200"/>
                <DataGridTextColumn x:Name="ColumnExistencias" Header="Existencia actual" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <Button x:Name="ButtonAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="572,536,0,0" VerticalAlignment="Top" Width="156" Height="46" Click="ButtonAceptar_Click"/>
        <Button x:Name="ButtonCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="805,536,0,0" VerticalAlignment="Top" Width="144" Height="46" Click="ButtonCancelar_Click"/>

    </Grid>
</Window>
