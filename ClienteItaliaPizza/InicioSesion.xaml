<Window x:Class="ClienteItaliaPizza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClienteItaliaPizza"
        mc:Ignorable="d"
        Title="Inicio de sesión" Height="650" Width="1000" WindowStartupLocation="CenterScreen" Icon="/RecursosGUI/WindowIcon.jpg">
    <Window.Background>
        <ImageBrush ImageSource="/RecursosGUI/pizza.jpg" Stretch="Fill"/>
    </Window.Background>
    <Grid>
        <Grid
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Height="575"
            Width="400"
            Margin="0,0,60,0"
            Background="Black" OpacityMask="{x:Null}" Opacity="0.75">
            <Label Content="B E N V E N U T O" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Background="#00000000" FontFamily="Curlz MT" FontSize="35" Foreground="White" FontWeight="Bold"/>
            <Image x:Name="logo" HorizontalAlignment="Center" Height="144" VerticalAlignment="Center" Width="162" Stretch="UniformToFill" Margin="0,76,0,355" Source="/RecursosGUI/logo.png"/>
            <Label Content="Nombre de usuario:" HorizontalAlignment="Center" Margin="52,251,180,0" VerticalAlignment="Top" Background="#00000000" FontFamily="Arial" FontSize="18" Foreground="White"/>
            <TextBox x:Name="textBoxNombreUsuario" HorizontalAlignment="Center" Height="26" Margin="54,282,54,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="292" FontFamily="Arial" FontSize="18" Focusable="True" KeyDown="textBoxNombreUsuario_KeyDown"/>
            <Label Content="Contraseña:" HorizontalAlignment="Center" Margin="54,320,238,0" VerticalAlignment="Top" Background="#00000000" FontFamily="Arial" FontSize="18" Foreground="White"/>
            <PasswordBox x:Name="passwordBoxContraseña" HorizontalAlignment="Center" Margin="54,351,54,0" VerticalAlignment="Top" Width="292" Height="26" FontFamily="Arial" FontSize="18" KeyDown="passwordBoxContraseña_KeyDown"/>
            <Button x:Name="LoginBtn" Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,414,0,0" VerticalAlignment="Top" Width="143" BorderBrush="#FF009900" Background="#FF009900" Height="31" Foreground="White" FontFamily="Arial" FontSize="15" FontWeight="Bold" Click="LoginBtn_Click"/>
            <Button x:Name="ButtonVentanaMeseros" Content="Ventana meseros" HorizontalAlignment="Center" Margin="128,466,128,0" VerticalAlignment="Top" Width="144" Background="White" BorderBrush="#FFCC0000" Height="30" Foreground="#FFCC0000" FontFamily="Arial" FontSize="16" FontWeight="Bold" BorderThickness="2,2,3,2" Click="ButtonVentanaMeseros_Click_1"/>
            <Button x:Name="ButtonVentanaCocina" Content="Ventana cocina" HorizontalAlignment="Left" Margin="128,517,0,0" VerticalAlignment="Top" Width="144" Height="30" FontFamily="Arial" FontSize="16" FontWeight="Bold" Background="#FFCC0000" BorderBrush="#FFCC0000" Foreground="White" Click="Button_Click"/>
        </Grid>
    </Grid>
</Window>
