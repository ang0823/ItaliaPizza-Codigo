        <Button x:Name="CerrarSesionBtn" Background="Transparent" Height="87" Width="73" Margin="0,2,4,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="CerrarSesionBtn_Click" BorderThickness="0">
